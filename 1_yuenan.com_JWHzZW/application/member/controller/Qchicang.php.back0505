class Qchicang extends Adminbase
{
    
    //初始化
    protected function initialize()
    {
        parent::initialize();
        $this->Quser = new QuserModel;
        $this->modelClass = new QchicangModel;
        
    }
    
    /**
     * 持仓列表
     */
    public function index(){
        if ($this->request->isAjax()) {
            list($page, $limit, $where) = $this->buildTableParames();
            $quser_arr = quser_arr(1);
            $_list                      = $this->modelClass->where($where)
                ->where($quser_arr['key'] , $quser_arr['fuhao'] ,$quser_arr['val'])
                ->page($page, $limit)->order('id desc')->select();
            foreach($_list as $k => $v){
                 $quser = Db::name('quser')->where('id',$v['quser_id'])->field('username,tel,code_quserid')->find();
                 $_list[$k]['username'] = $quser['tel'].'<br />'.$quser['username'];
                 $_list[$k]['s_username'] = quser_admin($v['quser_id']);//上級id
                 $qstockservices = Db::name('qstockservices')->where('id',$v['qstockservices_id'])->field('symbolName,symbol')->find();
                 $_list[$k]['qstockservices']  = $qstockservices['symbol'].'<br />'.$qstockservices['symbolName'];
                 
                $qstockservices_data = Db::name('qstockservices_data')->where('qstockservices_id',$v['qstockservices_id'])->field('regularMarketPrice')->find();
                $_list[$k]['shizhi'] = $qstockservices_data['regularMarketPrice'] * $v['mairu_num'];
                 
                $_list[$k]['mairu_type_name'] = $v['mairu_type'] == 1 ? '买涨' : '买跌';
                $_list[$k]['mairu_status_name'] = $v['mairu_status'] == 1 ? '市值' : '限价';
                
                if($v['maichu_type'] == 1){ $_list[$k]['maichu_type_name'] = '主动卖出';}
                elseif($v['maichu_type'] == 2){ $_list[$k]['maichu_type_name'] = '后台平仓'; }
                elseif($v['maichu_type'] == 3){ $_list[$k]['maichu_type_name'] = '触发止损'; }
                
                //订单状态 1 持仓中 2 平仓中 3 已平仓 10 排单中 
                if($v['status'] == 1){ $_list[$k]['status_name'] = '持仓中';}
                elseif($v['status'] == 2){ $_list[$k]['status_name'] = '平仓中'; }
                elseif($v['status'] == 3){ $_list[$k]['status_name'] = '已平仓'; }
                elseif($v['status'] == 10){ $_list[$k]['status_name'] = '排单中'; }
                $_list[$k]['mairu_time'] = date("Y/m/d",$v['mairu_time']).'<br />'.date('H:i:s',$v['mairu_time']);
                $_list[$k]['maichu_time'] = empty($v['maichu_time']) ? '' : date("Y/m/d",$v['mairu_time']).'<br />'.date('H:i:s',$v['mairu_time']);
                 
            }
            $total                      = $this->modelClass
                ->where($quser_arr['key'] , $quser_arr['fuhao'] ,$quser_arr['val'])
                ->where($where)->count();
            $result                     = array("code" => 0, "count" => $total, "data" => $_list);
            return json($result);
        }
        return $this->fetch();
    }  
    
