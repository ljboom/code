    public function details(){
        $get = input('get.');
        $res = $this->modelClass->where('id',$get['id'])->find();
        $quser = Db::name('quser')->where('id',$res['quser_id'])->find();
        $qstockservices = Db::name('qstockservices')->where('id',$res['qstockservices_id'])->field('sectorName,systexId')->find();
        $qstockservices_data = Db::name('qstockservices_data')->where('id',$res['qstockservices_id'])->field('regularMarketPrice')->find();
        // dump($res);
        // dump($quser);
        $data = array(
            'number' =>$res['number'],
            'tel' =>$quser['tel'],
            'mairu_type_name' => $res['mairu_type'] == 1 ? '买涨' : '买跌',
            'sectorName' => $qstockservices['sectorName'],
            'systexId' => $qstockservices['systexId'],
            'mairu_num' => $res['mairu_num'],
            'mairu_count' => $res['mairu_count'],
            'mairu_money' => $res['mairu_money'],
            'mairu_total_money' => $res['mairu_total_money'],
            'ganggang_beilv' => $res['ganggang_beilv'],
            'ganggang_beilv_num' => '',     //杠杆倍率股数
            'shizhi' => $qstockservices_data['regularMarketPrice'] * $res['mairu_num'],//市值
            'mairu_shouxu' => $res['mairu_shouxu'],
            'mairu_time' => date("Y/m/d H:i:s",$res['mairu_time']),
            
            
            'maichu_money' => $res['maichu_money'],
            'maichu_time' => empty($res['maichu_time']) ? '' :date("Y/m/d H:i:s",$res['maichu_time']),
            'maichu_money' => $res['maichu_money'],
            'maichu_total_money' => $res['maichu_total_money'],
            'maichu_shouxu' => $res['maichu_shouxu'],
            'renjiao_money' => $res['renjiao_money'],//人交税
            'liucang_day' => $res['liucang_day'],//留仓天数
            'liucang_money' => $res['liucang_money'],//留仓费
            'total_shouxu_money' => '',//总手续费
            'jiesuan_money' => $res['jiesuan_money'],//结算金额
            
            
            
            );
        if($res['maichu_type'] == 1){ $data['maichu_type_name'] = '主动卖出';}
        elseif($res['maichu_type'] == 2){ $data['maichu_type_name'] = '后台平仓'; }
        elseif($res['maichu_type'] == 3){ $data['maichu_type_name'] = '触发止损'; }
        
        if($res['status'] == 1){ $data['status_name'] = '持仓中';}
        elseif($res['status'] == 2){ $data['status_name'] = '平仓中'; }
        elseif($res['status'] == 3){ $data['status_name'] = '已平仓'; }
        elseif($res['status'] == 10){ $data['status_name'] = '排单中'; }
        
        return view('details',['data'=>$data]);
        
    }
        
    //平仓
    public function pingcang(){
        if ($this->request->isPost()) {
            $data   = $this->request->post();
            $res = $this->modelClass->pingcangManager($data);
            if($res['code'] == 200){
                $this->success("成功！");
            }else{
                $this->error("失败！");
            }
        }else{
            $data['id'] = input('get.id');
            $this->assign("data", $data);
            return $this->fetch();
        }
    }
    
    /**
